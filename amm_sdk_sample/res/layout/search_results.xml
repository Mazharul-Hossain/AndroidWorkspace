<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tableLayout1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#f6f6f6"
	android:orientation="vertical"
	android:weightSum="15" >

	<RelativeLayout
		android:id="@+id/linearLayout0"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#BDD6E0"
		android:orientation="vertical"
		android:padding="5dp"
		android:paddingBottom="10dp" >

		<TextView
			android:id="@+id/textView_Welcome"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/imageView_ProPic"
			android:text="Welcome Back"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/textView_Name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/textView_Welcome"
			android:layout_toLeftOf="@+id/imageView_ProPic"
			android:paddingLeft="10dp"
			android:text="Search"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" />

		<ImageView
			android:id="@+id/imageView_ProPic"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:contentDescription="ProPic"
			android:src="@drawable/btn_style_alert_dialog_button" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/linearLayout0"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="5dp"
		android:paddingBottom="10dp" >

		<TextView
			android:id="@+id/textView_Result"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@+id/textConnected"
			android:text="Results"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/textConnected"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="Connected"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1.25"
		android:background="#dcdada"
		android:paddingLeft="@dimen/padd_sze" >

		<TextView
			android:id="@+id/info_med_name_1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Drug Name : "
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1.25"
		android:paddingLeft="@dimen/padd_sze" >

		<TextView
			android:id="@+id/info_med_APPID_1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight=".1"
			android:gravity="left"
			android:text="Paracitamol 3 bela  "
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1.25" >

		<TextView
			android:id="@+id/info_med_SUBP_1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight=".1"
			android:gravity="center"
			android:text="Expiary Date : "
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/info_med_SUBP_2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight=".9"
			android:gravity="left"
			android:text="21/2/14"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#000000" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1.25" >

		<TextView
			android:id="@+id/info_med_DISCCD_1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="left"
			android:text=" Use Instruction "
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1.25" >

		<TextView
			android:id="@+id/info_med_DISCDT_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="left"
			android:text="Medium Text"
			android:textColor="#000000" />
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:gravity="bottom" >

		<TableRow
			android:id="@+id/tableRow1"
			android:layout_width="match_parent"
			android:layout_height="40dp" >

			<Button
				android:id="@+id/button_Instruction"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:text="Button" />
		</TableRow>
	</RelativeLayout>

	<TableRow
		android:id="@+id/tableRow2"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:paddingTop="10dp" >

		<Button
			android:id="@+id/button_New_Scan"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:text="Button" />

		<Button
			android:id="@+id/button_Add_Alarm"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:text="Button" />
	</TableRow>

</LinearLayout>