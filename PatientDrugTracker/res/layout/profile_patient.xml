<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:weightSum="9"
    android:padding="5dp">
    
    <LinearLayout
        android:background="#0000FF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/prof_image_pat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
       	    android:layout_weight="0.25"
            android:src="@drawable/user_male_olive_green" />

        <TextView
            android:id="@+id/prof_text_pat_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.5"
            android:gravity="center|left"
            android:text="Hello Me"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/text_size_profile_text_view" />

        <ImageView
            android:id="@+id/prof_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
        	android:layout_weight="0.25"
            android:src="@drawable/setting" />

    </LinearLayout>
    
    <LinearLayout
        android:background="#BDD6E0"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="6"  >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/prof_pat_day_of_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:gravity="center|bottom"
                android:layout_weight="0.4"
                android:text="24"
                android:textSize="60sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
 

            <TextView
                android:id="@+id/prof_pat_mon_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.1" 
                android:gravity="center"
                android:text="Sep 2012"
                android:textSize="20sp" 
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/prof_pat_day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.4" 
                android:gravity="center|top"
                android:textSize="20sp"
                android:text="Tuesday"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:weightSum="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Meds Due Today" 
                android:layout_weight="0.5"
                android:gravity="center|bottom"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent" 
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="Try following menu to add more information!"
                android:layout_marginTop="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
 
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:background="#c0c0c0"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profile_pat_med_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/pill_icon" />

            <TextView
                android:id="@+id/profile_pat_med_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.25"
                android:text="Medicines"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/alarm_icon" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.25"
                android:text="Alert"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>