<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#CCCC99">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imgv_for_ins_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/ic_list_library_authors"/>
          
     <TextView
        android:id="@+id/app_title_ins"
        android:text="Applications Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dip" 
        android:layout_marginTop="10dip"
         android:layout_marginLeft="10dip" 
         android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/star_app_install"
        android:text="*****************************"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dip" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/app_show_perm"
        android:text="Applications Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dip" 
        android:textColor="#000000"/>
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
     
     <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="  OK  "
          android:id="@+id/import_to_reader"
          android:layout_weight="1"/>
     <Button
          android:id="@+id/cancel_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text=" Cancel"/>
    </LinearLayout>
    
    
    
</LinearLayout>